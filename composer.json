{
    "name": "piggly/php-api-client",
    "description": "A client starter-kit used to interact with any REST API.",
    "minimum-stability": "stable",
    "version": "1.0.12",
    "keywords": [
        "piggly",
        "api",
        "restful api",
        "client", 
        "curl"
    ],
    "type": "library",
    "homepage": "https://github.com/piggly-dev/php-api-client",
    "autoload": {
        "psr-4": {
            "Piggly\\ApiClient\\": "src/"
        }
    },
    "require": {
        "php": "^7.2 || ^8.0",
        "monolog/monolog": "^2.2",
        "vlucas/phpdotenv": "^5.3",
        "ext-curl": "^7.2",
        "ext-json": "^7.2"
    },
    "require-dev": {
        "php": "^7.3 || ^8.0",
        "phpunit/phpunit": "^9.5"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Caique Araujo",
            "email": "caique@piggly.com.br",
            "homepage": "https://github.com/caiquearaujo",
            "role": "Developer"
        }
    ]
}
